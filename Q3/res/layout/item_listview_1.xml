<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
  >

   <RelativeLayout 
       android:layout_width="75dp"
       android:layout_height="75dp"
       android:id="@+id/mRl1"
       >
       <ImageView 
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
          android:id="@+id/mIv1"
          android:background="@color/www1"
           />
   </RelativeLayout>
   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@id/mRl1"
       android:orientation="vertical"
       >
       <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
           >
           <ImageView 
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/t3"
               android:id="@+id/mIv2"
               
               />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/mIv2"
               android:layout_marginLeft="3dp"
               android:id="@+id/mTv1"
               style="@style/text2"
               android:text="@string/c8"
               />
           <ImageView 
               android:layout_marginLeft="15dp"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/t3"
               android:id="@+id/mIv3"
               android:layout_toRightOf="@id/mTv1"
               />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/mIv3"
               android:layout_marginLeft="3dp"
               android:id="@+id/mTv2"
               style="@style/text2"
               android:text="@string/c9"
               />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/mTv3"
               android:layout_alignParentRight="true"
               style="@style/text2"
               android:text="@string/c11"
               />
       </RelativeLayout>
              <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
             android:layout_marginTop="4dp"
           >
                     <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/mTv4"
               style="@style/text2"
               android:text="@string/c11"
               />
                  <RelativeLayout 
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      >
                                 <ImageView 
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/aa2"
               android:id="@+id/mIv4"
               
               />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/mIv4"
               android:layout_marginLeft="3dp"
               android:id="@+id/mTv5"
               style="@style/text2"
               android:text="@string/c11"
               />
                      
                  </RelativeLayout>
                  </RelativeLayout>
                                <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
             android:layout_marginTop="4dp"
           >
                             <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/mTv7"
               android:layout_alignParentRight="true"
               style="@style/text21"
               android:text="@string/c11"
               />
                             <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/mTv6"
               android:layout_toLeftOf="@id/mTv6"
               style="@style/text2"
               android:text="@string/c10"
               />
                             
              </RelativeLayout>
   </LinearLayout>
</RelativeLayout>